{% schema %}
{
    "name": "Hero",
    "settings": [
        {"type":"text","id":"heading","label":"Heading","default":"Welcome to Hearth & Haven"},
        {"type":"textarea","id":"subheading","label":"Subheading","default":"Candles & Pet Comforts"},
        {"type":"image_picker","id":"image","label":"Background image"}
    ]
}
{% endschema %}


<section class="hero">
    <div class="hero-inner wrap">
        <div class="hero-copy">
            <h1>{{ section.settings.heading }}</h1>
            <p class="sub">{{ section.settings.subheading }}</p>
            <a href="/collections/all" class="btn">Shop all</a>
        </div>
        {% if section.settings.image != blank %}
        <div class="hero-media">
            <img src="{{ section.settings.image | img_url: '1200x' }}" alt="Hero image">
        </div>
        {% endif %}
    </div>
</section>