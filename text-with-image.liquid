{% schema %}
{
    "name":"Text with image",
    "settings":[
        {"type":"text","id":"heading","label":"Heading","default":"Designed for daily comfort"},
        {"type":"textarea","id":"text","label":"Text","default":"Small rituals, big difference."}
    ]
}
{% endschema %}


<section class="text-image wrap">
    <div class="content">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.text }}</p>
    </div>
</section>
